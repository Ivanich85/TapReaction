<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_for_result"
    tools:context="com.dmitriev.ivan.tapmosquito.ResultActivity">

    <TextView
        android:id="@+id/show_result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/current_result_dimen"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/best_result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="@dimen/best_result_dimen"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/motivation_string_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:textSize="@dimen/current_result_dimen"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again_button"
        android:textAllCaps="false"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/new_game_button"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/main_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/main_menu"
        android:textAllCaps="false"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/best_result_main_menu_dimen"
        android:layout_marginBottom="8dp"
        android:padding="16dp"
        android:background="@drawable/button"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit_game"
        android:textAllCaps="false"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/best_result_main_menu_dimen"
        android:layout_marginBottom="40dp"
        android:padding="16dp"
        android:background="@drawable/button"/>

</LinearLayout>
